[
  {
    "defaults": {
      "link": {
        "create": true,
        "relink": true,
        "force": true
      }
    }
  },
  {
    "clean": [ "~", "~/.config" ]
  },
  {
    "link": {
      "~/.vim": "vim/.vim",
      "~/.vimrc": "vim/.vimrc",
      "~/.gvimrc": "vim/.gvimrc",
      "~/.config/nvim": "vim/.config/nvim",
      "~/.config/fish": "fish/.config/fish",
      "~/.editorconfig": "dev/.editorconfig",
      "~/.gemrc": "dev/.gemrc",
      "~/.gitconfig": "dev/.gitconfig",
      "~/.gitignore_global": "dev/.gitignore_global",
      "~/.go-version": "dev/.go-version",
      "~/.node-version": "dev/.node-version",
      "~/.npmrc": "dev/.npmrc",
      "~/.ruby-version": "dev/.ruby-version",
      "~/bin/battery.sh": "tmux/bin/battery.sh",
      "~/bin/tmux-mem-cpu-load": "tmux/bin/tmux-mem-cpu-load",
      "~/.tmuxinator": "tmux/.tmuxinator",
      "~/.tmux.conf": "tmux/.tmux.conf",
      "~/.tmux.live.conf": "tmux/.tmux.live.conf",
      "~/.tmux": "tmux/.tmux",
      "~/.spacemacs": "emacs/.spacemacs",
      "~/bin/edit": "emacs/bin/edit",
      "~/.emacs.d/private/sonic-pi": "emacs/.emacs.d/private/sonic-pi",
      "~/Brewfile": "Brewfile",
      "~/Library/Application Support/Sublime Text 3/Packages/User/Preferences.sublime-settings": "apps/Preferences.sublime-settings",
      "~/Library/Application Support/Spectacle/Shortcuts.json": "apps/spectacle.json",
      "~/.config/profanity": "apps/profanity",
      "~/.sonic-pi/init.rb": "sonic-pi/init.rb",
      "~/.sonic-pi/snippets": "sonic-pi/snippets",
      "~/.ssh/config": "ssh/config",
      "~/Library/Application Support/Code/User/keybindings.json": "apps/Library/Application Support/Code/User/keybindings.json",
      "~/Library/Application Support/Code/User/settings.json": "apps/Library/Application Support/Code/User/settings.json"
    }
  },
  {
    "brewfile": {
      "file": "~/Brewfile"
    }
  },
  {
    "shell": [
      ["git submodule update --init --recursive", "Installing submodules"],
      ["pip2 install neovim", "Installing Python 2 NeoVim plugin"],
      ["pip3 install neovim", "Installing Python 3 NeoVim plugin"],
      ["gem install neovim", "Installing Ruby NeoVim Gem"],
      ["fisher", "Installing fisher plugins"],
      ["mv ~/.config/fish/functions/copy-fish_greeting.fish ~/.config/fish/functions/fish_greeting.fish", "Reapplying fish_greeting.fish"],
      ["mv ~/.config/fish/functions/copy-fish_mode_prompt.fish ~/.config/fish/functions/fish_mode_prompt.fish", "Reapplying fish_mode_prompt.fish"],
      ["source macos", "Setting MacOS X defaults"]
    ]
  }
]
